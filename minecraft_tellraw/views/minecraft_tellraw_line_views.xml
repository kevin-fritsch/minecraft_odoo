<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="minecraft_tellraw_line_view_tree" model="ir.ui.view">
        <field name="name">minecraft.tellraw.line.tree</field>
        <field name="model">minecraft.tellraw.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="line_break" />
                <field name="text" attrs="{'invisible': [('line_break', '=', True)]}" />
            </tree>
        </field>
    </record>

    <record id="minecraft_tellraw_line_view_form" model="ir.ui.view">
        <field name="name">minecraft.tellraw.line.form</field>
        <field name="model">minecraft.tellraw.line</field>
        <field name="arch" type="xml">
            <form>
                <field name="is_hover_event_text" invisible="1" />
                <group>
                    <field name="line_break" />
                </group>
                <group
          attrs="{'invisible': [('line_break', '=', True)], 'required': [('line_break', '=', False)]}"
        >
                    <group>
                        <field name="text" />
                    </group>
                    <group>
                        <field name="custom_color" />
                        <field
              name="color"
              attrs="{'invisible': [('custom_color', '=', False)]}"
              widget="color"
            />
                        <field name="bold" />
                        <field name="italic" />
                        <field name="underlined" />
                        <field name="obfuscated" />
                        <field name="custom_font" />
                        <field
              name="font"
              attrs="{'invisible': [('custom_font', '=', False)]}"
            />
                    </group>
                    <group attrs="{'invisible': [('is_hover_event_text', '=', True)]}">
                        <field
              name="click_event"
              attrs="{'required': [('line_break', '=', False)]}"
            />
                        <field
              name="click_event_text"
              attrs="{'invisible': [('click_event', '=', 'none')]}"
            />
                    </group>
                    <group attrs="{'invisible': [('is_hover_event_text', '=', True)]}">
                        <field
              name="hover_event"
              attrs="{'required': [('line_break', '=', False)]}"
            />
                        <field
              name="hover_event_text"
              attrs="{'invisible': [('hover_event', 'not in', ['show_entity', 'show_item'])]}"
            />
                        <field
              name="hover_event_show_text_line_ids"
              attrs="{'invisible': [('hover_event', 'not in', ['show_text'])]}"
              context="{'default_is_hover_event_text': True}"
            />
                    </group>
                </group>
            </form>
        </field>
    </record>

</odoo>
